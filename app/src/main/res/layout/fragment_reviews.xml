<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:elevation="4dp"
            android:fitsSystemWindows="true"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/baseline_arrow_forward_12"
            app:title="TajMahal"
            app:titleTextColor="@color/black" />

        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/jakarta_regular"
            android:text="Manon_Garcia"
            android:textColor="#666666"
            app:layout_constraintStart_toEndOf="@+id/userAvatar"
            app:layout_constraintTop_toTopOf="parent" />


        <RatingBar
            android:id="@+id/reviewRate"
            style="?attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:isIndicator="false"
            android:numStars="5"
            android:progressTint="#FFB800"
            android:scaleX="1.6"
            android:scaleY="1.6"
            app:layout_constraintBottom_toBottomOf="@+id/userAvatar"
            app:layout_constraintStart_toEndOf="@id/userAvatar"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            app:layout_constraintVertical_bias="1" />


        <EditText
            android:id="@+id/reviewEdit"
            android:layout_width="320dp"
            android:layout_height="53dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/jakarta_regular"
            android:hint="Partage ici les détails de votre expérience"
            android:inputType="text"
            android:textColor="#666666"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/userAvatar"
            app:layout_constraintTop_toBottomOf="@id/userName" />

        <com.google.android.material.chip.Chip
            android:id="@+id/buttonValidate"
            android:layout_width="73dp"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Valider"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:chipBackgroundColor="#CF2F2F"
            app:chipCornerRadius="12dp"
            app:chipStrokeColor="#CF2F2F"
            app:layout_constraintEnd_toEndOf="@id/reviewEdit"
            app:layout_constraintTop_toTopOf="parent"
            app:textEndPadding="10dp"
            app:textStartPadding="10dp" />


        <View
            android:id="@+id/separator"
            android:layout_width="320dp"
            android:layout_height="0.75dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="#DADADA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reviewEdit" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/reviewEdit"
            app:layout_constraintStart_toStartOf="@+id/userAvatar"
            app:layout_constraintTop_toBottomOf="@+id/separator" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>